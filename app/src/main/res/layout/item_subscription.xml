<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
    <data>
        <variable
            name="subscription"
            type="com.dynamic.island.oasis.data.Subscription" />
        <variable
            name="vm"
            type="com.dynamic.island.oasis.ui.paywall.PaywallViewModel" />
    </data>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        tools:src="@drawable/shape_pink_18"
        android:onClick="@{()->vm.onSubscriptionClicked(subscription)}"
        android:layout_marginBottom="10dp"
        android:background="@{subscription.id.equals(vm.selectedSubscription.id) ? @drawable/shape_pink_18 : @drawable/shape_purple_grey_18}"
        android:layout_height="wrap_content">

        <LinearLayout
            android:id="@+id/linearLayout7"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="19dp"
            android:layout_marginTop="24dp"
            android:layout_marginEnd="19dp"
            android:layout_marginBottom="24dp"
            android:orientation="vertical"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/checkbox"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <TextView
                style="@style/MyTextRobotoSB12"
                android:layout_width="wrap_content"
                android:ellipsize="end"
                android:layout_height="wrap_content"
                android:text="@{subscription.title}"
                android:textColor="@color/dark_purple"
                android:textSize="14sp"
                tools:text="Free trial" />


            <TextView
                style="@style/MyTextRobotoM14"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:ellipsize="end"
                android:text="@{subscription.description}"
                android:textColor="@color/dark_purple"
                android:textSize="11sp"
                tools:text="Then $99.99/1year.Only $8.00/month "/>

        </LinearLayout>

        <ImageView
            android:id="@+id/checkbox"
            android:layout_width="21dp"
            android:layout_height="21dp"
            android:layout_marginEnd="16dp"
            android:src="@{subscription.id.equals(vm.selectedSubscription.id) ? @drawable/ic_checkbox_checked : @drawable/ic_checkbox_unchecked}"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:src="@drawable/ic_checkbox_checked" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
