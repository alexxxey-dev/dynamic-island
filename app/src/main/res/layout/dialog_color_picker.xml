<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
    <data>
        <variable
            name="vm"
            type="com.dynamic.island.oasis.ui.dialogs.color_picker.ColorPickerViewModel" />
    </data>


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:id="@+id/root"
        android:clickable="true"
        android:background="@drawable/shape_light_pink_28"
        android:focusable="true"
        android:layout_height="wrap_content">

        <com.skydoves.colorpickerview.ColorPickerView
            android:id="@+id/colorPicker"
            android:layout_width="0dp"
            app:selector="@drawable/ic_color_selector"
            app:selector_size="5dp"
            android:layout_height="0dp"
            app:layout_constraintDimensionRatio="1:1"
            android:layout_marginStart="30dp"
            android:layout_marginEnd="30dp"
            android:layout_marginTop="30dp"
            app:layout_constraintEnd_toStartOf="@+id/linearLayout6"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


        <androidx.cardview.widget.CardView
            android:layout_width="0dp"
            android:layout_height="12dp"
            android:id="@+id/rl"
            android:layout_marginTop="22dp"
            android:clipChildren="true"
            app:layout_constraintEnd_toEndOf="@+id/colorPicker"
            app:cardCornerRadius="16dp"
            app:cardElevation="0dp"
            app:layout_constraintStart_toStartOf="@+id/colorPicker"
            app:layout_constraintTop_toBottomOf="@+id/colorPicker">
            <com.skydoves.colorpickerview.sliders.BrightnessSlideBar
                android:layout_width="match_parent"
                android:id="@+id/brightnessPicker"
                android:layout_height="match_parent"
                app:borderColor_BrightnessSlider="@android:color/transparent"
                app:selector_BrightnessSlider="@drawable/ic_color_selector"
                />

        </androidx.cardview.widget.CardView>


        <LinearLayout
            android:id="@+id/linearLayout6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:layout_marginEnd="25dp"
            android:orientation="vertical"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <TextView
                style="@style/MyTextRobotoR14"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/color" />


            <androidx.cardview.widget.CardView
                android:id="@+id/colorCard"
                android:layout_width="59dp"
                android:layout_height="28dp"
                android:layout_marginTop="4dp"
                app:cardCornerRadius="4dp"
                app:cardElevation="0dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <View
                    android:id="@+id/colorBackground"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    app:backgroundColor="@{vm.color}"
                    tools:background="@color/black" />
            </androidx.cardview.widget.CardView>
        </LinearLayout>


        <LinearLayout
            android:id="@+id/linearLayout8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="17dp"
            android:layout_marginEnd="25dp"
            android:orientation="vertical"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/linearLayout6">

            <TextView
                style="@style/MyTextRobotoR14"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/hex" />

            <FrameLayout
                android:layout_width="59dp"
                android:layout_height="28dp"
                android:layout_marginTop="4dp"
                android:background="@drawable/shape_purple_grey_stroke_4">


                <TextView
                    android:id="@+id/hexEditText"
                    style="@style/MyTextRobotoR14"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="@{vm.colorHex}"
                    android:textSize="10sp"
                    tools:text="#9751F2" />

            </FrameLayout>
        </LinearLayout>


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/bReset"
            android:layout_marginTop="16dp"
            android:gravity="center"
            android:orientation="horizontal"
            app:layout_constraintStart_toStartOf="@+id/linearLayout8"
            app:layout_constraintTop_toBottomOf="@+id/linearLayout8">

            <TextView
                style="@style/MyTextRobotoR14"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/reset" />


            <ImageView
                android:layout_marginTop="1dp"
                android:layout_width="10dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="4.5dp"
                android:src="@drawable/ic_reset" />
        </LinearLayout>


        <androidx.constraintlayout.widget.Guideline
            android:layout_width="wrap_content"
            android:id="@+id/center_vertical"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.5"/>

        <TextView
            android:id="@+id/bCancel"
            style="@style/MyTextRobotoM14"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="23dp"
            android:padding="8dp"
            android:layout_marginBottom="17dp"
            android:text="@string/cancel"
            android:textColor="@color/purple_grey"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/center_vertical"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/rl" />

        <TextView
            android:id="@+id/bOk"
            style="@style/MyTextRobotoM14"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:layout_marginTop="23dp"
            android:layout_marginBottom="17dp"
            android:text="@string/ok"
            android:textColor="@color/purple"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="@+id/center_vertical"
            app:layout_constraintTop_toBottomOf="@id/rl" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
