<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
    <data>

    </data>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clipChildren="false"
        android:paddingStart="@dimen/di_default_padding"
        android:paddingEnd="@dimen/di_default_padding"
        android:paddingBottom="@dimen/di_default_padding"
        android:clipToPadding="false">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:clipChildren="false"
            android:id="@+id/background">
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:clipChildren="false"
                tools:layout_height="50dp"
                tools:background="@drawable/shape_di_rounded"
                tools:backgroundTint="@color/black"
                android:id="@+id/backgroundSecond">

                <RelativeLayout
                    android:id="@+id/logoLayout"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_marginStart="11dp"
                    android:scaleType="centerCrop"
                    android:layout_marginTop="8dp"
                    android:layout_marginEnd="11dp"
                    android:layout_marginBottom="8dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintDimensionRatio="1:1"
                    app:layout_constraintHorizontal_bias="0.0"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" >

                    <com.mikhaellopez.circularimageview.CircularImageView
                        app:civ_border_width="0dp"
                        android:id="@+id/photo"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"

                        tools:src="@mipmap/ic_launcher" />
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:id="@+id/fakePhoto"

                        android:layout_height="match_parent"
                        android:background="@drawable/shape_call_photo">

                        <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/fakePhotoText"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_centerInParent="true"
                            android:breakStrategy="balanced"
                            android:fontFamily="@font/roboto_medium"
                            android:gravity="center"
                            android:textColor="@color/purple"
                            app:autoSizeMaxTextSize="30sp"
                            app:autoSizeMinTextSize="1sp"
                            app:autoSizeTextType="uniform"
                            tools:text="A" />

                    </RelativeLayout>
                </RelativeLayout>

                <TextView
                    android:id="@+id/duration"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="7dp"
                    android:layout_marginEnd="7dp"
                    android:ellipsize="marquee"
                    android:fontFamily="@font/roboto_semi_bold"
                    android:singleLine="true"
                    android:textColor="@color/white"
                    android:textSize="14sp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toStartOf="@+id/relativeLayout2"
                    app:layout_constraintHorizontal_bias="0.0"
                    app:layout_constraintStart_toEndOf="@+id/logoLayout"
                    app:layout_constraintTop_toTopOf="parent"
                    tools:text="1:05" />

                <RelativeLayout
                    android:id="@+id/relativeLayout2"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginEnd="11dp"
                    android:layout_marginBottom="8dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintDimensionRatio="1:1"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent">



                    <com.airbnb.lottie.LottieAnimationView
                        android:id="@+id/fake_visualizer"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"

                        app:lottie_loop="true"
                        app:lottie_rawRes="@raw/sound_wave" />
                </RelativeLayout>





            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>



    </androidx.constraintlayout.widget.ConstraintLayout>


</layout>
