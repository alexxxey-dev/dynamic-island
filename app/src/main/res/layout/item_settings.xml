<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
    <data>
        <import type="android.view.View"/>
        <variable
            name="vm"
            type="com.dynamic.island.oasis.ui.settings.SettingsViewModel" />
    </data>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/colorCard"
            android:layout_marginStart="@dimen/margin_left_right_home"
            android:layout_marginTop="@dimen/margin_top_bottom"
            android:layout_marginBottom="@dimen/margin_top_bottom"
            android:layout_marginEnd="8dp"
            android:gravity="center"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">
            <ImageView
                android:layout_marginEnd="8dp"
                android:layout_width="14dp"
                android:layout_height="wrap_content"
                android:id="@+id/lock"
                android:src="@drawable/ic_grey_lock" />
            <TextView
                style="@style/MyTextRobotoM14"
                android:layout_width="match_parent"
                android:id="@+id/text"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:maxLines="2"
                tools:textColor="@color/purple_grey"
                tools:text="Test setttingsTest setttingsTest setttingsTest setttingsTest setttingsTest setttingsTest setttingsTest setttingsTest setttings" />
        </LinearLayout>



        <com.dynamic.island.oasis.ui.animated_switch.AnimatedSwitch
            android:id="@+id/animatedSwitch"
            android:layout_width="42dp"
            android:layout_height="25dp"
            android:layout_marginEnd="32dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


        <androidx.cardview.widget.CardView
            android:id="@+id/colorCard"
            android:layout_width="45dp"
            android:layout_height="25dp"
            android:layout_marginEnd="32dp"
            app:cardCornerRadius="4dp"
            app:cardElevation="0dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <View
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/colorBackground"
                tools:background="@color/black" />
        </androidx.cardview.widget.CardView>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:id="@+id/line"
            tools:visibility="gone"
            android:background="@color/grey_4"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />


    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
