<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <import type="android.view.View" />

        <variable
            name="vm"
            type="com.dynamic.island.oasis.ui.main.MainViewModel" />
    </data>
    <FrameLayout
        android:layout_width="match_parent"
        android:background="@color/white_pink"
        android:layout_height="match_parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:id="@+id/content"
            android:layout_height="match_parent">


            <fragment
                android:id="@+id/nav_host_fragment"
                android:name="androidx.navigation.fragment.NavHostFragment"
                android:layout_width="0dp"
                android:layout_height="0dp"
                app:defaultNavHost="true"
                app:layout_constraintBottom_toTopOf="@+id/bottom_nav"
                app:layout_constraintLeft_toLeftOf="parent"

                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent" />


            <com.google.android.material.bottomnavigation.BottomNavigationView
                android:id="@+id/bottom_nav"
                android:layout_width="match_parent"

                android:layout_height="80dp"
                android:clickable="@{vm.bottomNavVisible}"
                android:focusable="@{vm.bottomNavVisible}"
                android:fontFamily="@font/roboto_semi_bold"
                android:textSize="12sp"
                android:visibility="@{vm.bottomNavVisible ? View.VISIBLE : View.GONE}"
                app:backgroundTint="@color/white_purple"
                app:elevation="0dp"
                app:itemBackground="@drawable/selector_bottom_nav_bg"
                app:itemIconTint="@null"
                app:itemTextColor="@drawable/selector_bottom_nav_text"
                app:itemPaddingBottom="16dp"
                app:itemPaddingTop="19.6dp"
                app:itemRippleColor="@null"
                app:itemTextAppearanceActive="@style/MyTextBottomNavActive"
                app:itemTextAppearanceInactive="@style/MyTextBottomNavInactive"
                app:layout_constraintBottom_toTopOf="@id/banner"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:menu="@menu/bottom_nav" />

            <FrameLayout
                android:id="@+id/banner"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="@{!vm.subscription &amp;&amp; !vm.isOnboarding &amp;&amp; !vm.isPaywall &amp;&amp; vm.adSource.bannerAd!= null  ? View.VISIBLE : View.GONE}"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </FrameLayout>

</layout>
